<?xml version="1.0" encoding="UTF-8"?>
<site>
    <title>Compte utilisateur</title>
    <name>user_mod</name>
    <base>webframework</base>
    <description>Gestionnaire de compte utilisateur</description>
    
    <index>
        <page id="index" name="Accueil">index.php</page>
        <!-- admin -->
        <page id="create" role="administrator" name="Créer un utilisateur">create.php</page>
        <page id="delete" role="administrator" name="Supprimer un utilisateur">delete.php</page>
        <page id="disconnect_user" role="administrator" name="Déconnecter un utilisateur">disconnect_user.php</page>
        <page id="disconnect_all" role="administrator" name="Déconnecter tous les utilisateurs">disconnect_all.php</page>
        <!-- visiteur -->
        <page id="register" role="visitor" name="Inscription">register.php</page>
        <page id="activate" role="visitor" name="Activer une inscription">activate.php</page>
        <page id="connect" role="visitor" name="Connexion (auto)">connect.php</page>
        <page id="connect_to" role="visitor" name="Connexion (session existante)">connect_to.php</page>
        <page id="lost_pwd" role="visitor" name="Récuperation de mot-de-passe">lost_pwd.php</page>
        <!-- utilisateur -->
        <page id="disconnect" role="user" name="Déconnexion">disconnect.php</page>
        <page id="check" role="user" name="Maintenir ma connexion">check.php</page>
        <page id="identity" role="user" name="Renseigner mon identité">identity.php</page>
        <!-- templates -->
        <template id="connect" name="Connect user popup">view/popup/connect.html</template>
        <template id="create" name="Create user popup">view/popup/create.html</template>
        <template id="delete" name="Delete user popup">view/popup/delete.html</template>
        <template id="disconnect" name="Disconnect user popup">view/popup/disconnect.html</template>
    </index>

    <tree>
        <index/>
        <connect/>
        <connect_to/>
        <create/>
        <delete/>
        <disconnect/>
        <disconnect_all/>
        <activate/>
        <check/>
        <lost_pwd/>
        <identity/>
    </tree>
    
    <results lang="fr">
        <codes>
            <ERR_OK>Succès</ERR_OK>
            <ERR_FAILED>Echec</ERR_FAILED>
            <ERR_SYSTEM>Erreur système</ERR_SYSTEM>
        </codes>

        <errors>
            <!-- WFW (ERR_FAILED) -->
            <NO_INPUT_FIELD>Aucun champ reçu</NO_INPUT_FIELD>
            <MISSING_FIELD>Champ manquant</MISSING_FIELD>
            <EMPTY_TEXT>Champ vide</EMPTY_TEXT>
            <INVALID_CHAR>Champ contenant des caractères interdits</INVALID_CHAR>
            <INVALID_FORMAT>Champ mal formé</INVALID_FORMAT>
            <DB_CONNECTION>Connexion au serveur de base de données a échouée</DB_CONNECTION>
            <DB_SQL_QUERY>Requête SQL mal formée</DB_SQL_QUERY>
            <SOCK_OPEN_URL>La connexion au serveur a échouée</SOCK_OPEN_URL>
            <!-- WFW (ERR_SYSTEM) -->
            <SYS_TASK_CREATE>La tâche ne peut pas être créée</SYS_TASK_CREATE>
            <SYS_TASK_UPDATE>La tâche ne peut pas être mise à jour</SYS_TASK_UPDATE>
            
            <!-- USER (ERR_OK) -->
            <USER_CREATED>Utilisateur créé</USER_CREATED>
            <USER_DELETED>Utilisateur supprimé</USER_DELETED>
            <USER_REGISTRED>Inscription réussite</USER_REGISTRED>
            <USER_DISCONNECTED>Utilisateur déconnecté</USER_DISCONNECTED>
            <!-- USER (ERR_FAILED) -->
            <USER_EXISTS>L’Utilisateur existe déjà</USER_EXISTS>
            <USER_INVALID_PWD>Le mot-de-passe est invalide</USER_INVALID_PWD>
            <USER_MAIL_EXISTS>L’adresse e-mail existe déjà</USER_MAIL_EXISTS>
            <USER_NAME_EXISTS>Le nom d’utilisateur existe déjà</USER_NAME_EXISTS>
            <USER_MAIL_REGISTRED>Une inscription en attente existe déjà pour cette adresse e-mail</USER_MAIL_REGISTRED>
            <USER_REGISTRATIION_NOT_EXISTS>L’Inscription n’existe pas</USER_REGISTRATIION_NOT_EXISTS>
            <USER_CONNECTION_NOT_EXISTS>La connexion n’existe pas</USER_CONNECTION_NOT_EXISTS>
            <USER_CONNECTION_IP_REFUSED>L’Adresse IP ne correspond pas</USER_CONNECTION_IP_REFUSED>
            <USER_CONNECTION_EXPIRED>La connexion à expirée</USER_CONNECTION_EXPIRED>
        </errors>

        <messages>
            <!-- WFW -->
            <INPUT_MSG_INVALID_FIELD>
                Merci de renseigner le champ: $FIELD_NAME.
            </INPUT_MSG_INVALID_FIELD>
            <SOCK_SERVER_CONNECTION>
                Cause retourné par le socket #$ERRNO : $ERRSTR
            </SOCK_SERVER_CONNECTION>
            
            <!-- USER -->
            <USER_MSG_ACTIVATE_BY_MAIL>
                Merci de consulter vos courriers électroniques pour activer votre compte utilisateur.
            </USER_MSG_ACTIVATE_BY_MAIL>
            <USER_MSG_AUTO_ACTIVATE>
                Votre compte est maintenant créé.
                Votre mot-de-passe de connexion est le suivant: $PWD.
                Conservez ce code en lieu sûr, il ne vous sera plus communiqué à l’avenir.
            </USER_MSG_AUTO_ACTIVATE>
        </messages>
        
        <fields>
            <uid format="identifier">Nom d'utilisateur</uid>
            <pwd format="password">Mot-de-passe</pwd>
            <mail format="mail">Adresse eMail</mail>
            <token format="name">Jeton</token>
            <life_time format="integer">Temps d'inactivité avant déconnexion</life_time>
            <cid format="name">Identifiant de connexion</cid>
            <firstname format="name">Prénom</firstname>
            <lastname format="name">Nom</lastname>
            <birthday format="date">Date de naissance</birthday>
        </fields>
    </results>
</site>